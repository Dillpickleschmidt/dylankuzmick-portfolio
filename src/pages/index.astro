---
import Base from '../layouts/Base.astro';
const skillGroups = [
	{
		label: 'Languages',
		skills: ['TypeScript', 'Rust', 'C++', 'Python'],
	},
	{
		label: 'Frontend',
		skills: ['React', 'SolidJS', 'Next.js', 'TanStack Start', 'Astro'],
	},
	{
		label: 'Backend',
		skills: ['Node.js', 'Hono', 'Effect.ts', 'Convex', 'SQL', 'OpenAI', 'Vercel AI SDK'],
	},
	{
		label: 'Infrastructure',
		skills: ['AWS', 'Docker', 'Dokploy', 'Tauri', 'OpenTelemetry', 'Git', 'Linux'],
	},
];

const projects = [
	{
		title: 'ACADEMIC READER',
		description: 'PDF-to-readable-HTML converter with AI chat, TTS, and document embeddings. Monorepo with React frontend, Hono API, Convex backend, and GPU workers.',
		tags: ['React', 'Hono', 'Effect.ts', 'Convex', 'AI'],
		url: 'https://github.com/dillpickleschmidt-org/academic-reader',
		featured: true,
		gradient: 'linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%)',
	},
	{
		title: 'NIHONGO NINJA',
		description: 'Japanese language learning platform built with TanStack Start for immersive study through interactive lessons and spaced repetition.',
		tags: ['TanStack Start', 'React', 'TypeScript'],
		url: 'https://github.com/Dillpickleschmidt/nihongo-ninja-tanstack',
		featured: true,
		gradient: 'linear-gradient(135deg, #1a1a1a 0%, #2d1b2e 50%, #1a0a2e 100%)',
	},
	{
		title: 'Hyprflow',
		description: 'Hyprland workflow tools: per-workspace network namespaces for isolated localhost and visual tab group overlay. Docker + browser integration.',
		tags: ['Python', 'Shell', 'Hyprland', 'Docker'],
		url: 'https://github.com/Dillpickleschmidt/hyprflow',
		featured: false,
		gradient: 'linear-gradient(135deg, #0a1a1a 0%, #0f2a2a 50%, #1a2a1a 100%)',
	},
	{
		title: 'Subtitle Filename Parser',
		description: 'Rust CLI for organizing anime subtitle files and downloading missing subtitles via the Jimaku API. Docker Compose support.',
		tags: ['Rust', 'CLI', 'Docker'],
		url: 'https://github.com/Dillpickleschmidt/subtitle-filename-parser',
		featured: false,
		gradient: 'linear-gradient(135deg, #2a1a0a 0%, #1f1a0f 50%, #1a1a0a 100%)',
	},
	{
		title: 'Unreal NIF Import',
		description: 'Unreal Engine plugin for importing .nif files (NetImmerse/Gamebryo). Supports static meshes, textures, materials, and BSA extraction.',
		tags: ['C++', 'Unreal Engine'],
		url: 'https://github.com/Dillpickleschmidt/unreal-nifimport',
		featured: false,
		gradient: 'linear-gradient(135deg, #1a1a2a 0%, #1f1f30 50%, #2a2a3a 100%)',
	},
	{
		title: 'Nihongo Ninja Extension',
		description: 'Chrome extension for subtitle sentence mining from streaming video. Anki integration via AnkiConnect for flashcard export.',
		tags: ['TypeScript', 'Chrome Extension'],
		url: 'https://github.com/Dillpickleschmidt/nihongo-ninja-extension',
		featured: false,
		gradient: 'linear-gradient(135deg, #2e1a2e 0%, #1f0f2a 50%, #1a1a2e 100%)',
	},
	{
		title: 'Immersive YouTube Theater',
		description: 'YouTube theater mode browser extension for a distraction-free viewing experience.',
		tags: ['TypeScript', 'Browser Extension'],
		url: 'https://github.com/Dillpickleschmidt/immersive-youtube-theater',
		featured: false,
		gradient: 'linear-gradient(135deg, #1a0a0a 0%, #2a1515 50%, #2a1a1a 100%)',
	},
];

const featured = projects.filter(p => p.featured);
const grid = projects.filter(p => !p.featured);
---

<Base title="Dylan Kuzmick">
	<!-- Hero -->
	<section class="relative min-h-[50vh] md:min-h-[65vh] flex items-end overflow-hidden">
		<img
			src="/dylan-hero.jpg"
			alt="Dylan Kuzmick sitting on a bench in a garden"
			class="hero-image absolute inset-0 w-full h-full object-cover object-center"
		/>
		<!-- Gradient overlay — theme-aware -->
		<div class="absolute inset-0" style="background: linear-gradient(to right, var(--hero-overlay-from), var(--hero-overlay-via), transparent);"></div>
		<div class="absolute inset-0" style="background: linear-gradient(to top, var(--hero-overlay-bottom), transparent, transparent);"></div>
		<div class="relative z-10 max-w-7xl mx-auto px-6 md:px-12 lg:px-20 pb-12 md:pb-16 w-full">
			<h1 class="font-display text-[clamp(4rem,14vw,10rem)] leading-[0.88] tracking-tight" style="color: var(--hero-text);">
				<span class="hero-line-top inline-block">DYLAN</span><br/><span class="hero-line-bottom text-accent-secondary inline-block glitch-root" id="hero-spark">{'KUZMICK'.split('').map(ch => <span class="hero-char">{ch}</span>)}<span id="hero-cursor" class="hero-cursor">|</span></span>
			</h1>
			<p class="mt-6 text-lg md:text-xl max-w-xl leading-relaxed" style="color: var(--hero-text-muted);">
				Full-stack developer and UVA CS grad. Every project I build starts with a real problem and ends with software people can actually use.
			</p>
		</div>
	</section>

	<!-- Skills -->
	<section class="border-y border-border py-10 md:py-14">
		<div class="max-w-5xl mx-auto px-6 grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-6">
			{skillGroups.map((group, gi) => (
				<div class="skill-fade-in" style={`animation-delay: ${gi * 120}ms`}>
					<div class="mb-4 md:mb-5 border-t-2 border-border-hover">
						<span class="inline-block font-mono text-[10px] md:text-[11px] uppercase tracking-[0.2em] mt-3 md:mt-4 text-text-muted">{group.label}</span>
					</div>
					<ul class="space-y-1.5 md:space-y-2">
						{group.skills.map((skill, si) => (
							<li
								class="skill-item skill-fade-in font-body text-base md:text-lg text-text-muted/70 transition-colors duration-200"
								style={`animation-delay: ${gi * 120 + (si + 1) * 50}ms`}
							>{skill}</li>
						))}
					</ul>
				</div>
			))}
		</div>
	</section>

	<!-- Featured Projects — alternating layout -->
	<section class="max-w-6xl mx-auto px-6 pt-16 md:pt-20">
		<h2 class="font-mono text-lg uppercase tracking-[0.2em] text-text-muted text-center mb-4 md:mb-6">Featured Projects</h2>
		{featured.map((project, i) => (
			<div class={`grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-14 items-center py-12 md:py-16 reveal ${i > 0 ? 'border-t border-border/40' : ''}`}
				style={`--reveal-delay: ${i * 100}ms`}>
				<a href={project.url} target="_blank" rel="noopener noreferrer" class={`group block aspect-[16/9] rounded-2xl bg-surface overflow-hidden ${i % 2 !== 0 ? 'md:order-2' : ''}`}>
					<span class="sr-only">Project preview</span>
				</a>
				<div class={i % 2 !== 0 ? 'md:order-1 md:text-right' : ''}>
					<a href={project.url} target="_blank" rel="noopener noreferrer" class="group block">
						<h3 class="text-2xl md:text-3xl font-semibold tracking-tight group-hover:text-accent transition-colors duration-300">{project.title}</h3>
						<p class="mt-2 text-text-muted text-sm md:text-base leading-relaxed">{project.description}</p>
					</a>
					<div class={`flex items-center gap-2 mt-4 text-[12px] text-text-muted/50 ${i % 2 !== 0 ? 'md:justify-end' : ''}`}>
						{project.tags.map((tag, j) => (
							<>
								{j > 0 && <span class="text-text-muted/20">&middot;</span>}
								<span>{tag}</span>
							</>
						))}
					</div>
				</div>
			</div>
		))}
	</section>

	<!-- Other Projects — compact grid -->
	<section class="max-w-6xl mx-auto px-6 pt-12 md:pt-16 pb-20 md:pb-28 reveal">
		<h3 class="text-sm font-light uppercase tracking-[0.2em] text-text-muted mb-8 md:mb-10">More Projects</h3>
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-10">
			{grid.map((project, i) => (
				<a href={project.url} target="_blank" rel="noopener noreferrer"
					class="group block reveal"
					style={`--reveal-delay: ${i * 60}ms`}>
					<div class="aspect-[16/10] rounded-xl bg-surface overflow-hidden mb-4">
						<span class="sr-only">Project preview</span>
					</div>
					<h4 class="text-base font-medium group-hover:text-accent transition-colors duration-200">{project.title}</h4>
					<p class="text-sm text-text-muted/60 mt-1 line-clamp-2 leading-relaxed">{project.description}</p>
					<div class="flex items-center mt-2 gap-2 text-[11px] text-text-muted/40">
						{project.tags.map((tag, j) => (
							<>
								{j > 0 && <span class="text-text-muted/15">&middot;</span>}
								<span>{tag}</span>
							</>
						))}
					</div>
				</a>
			))}
		</div>
	</section>

	<!-- Contact -->
	<section class="border-t border-accent pt-14 pb-10 md:pt-20 md:pb-14 reveal">
		<div class="max-w-6xl mx-auto px-6 text-center">
			<h2 class="text-4xl md:text-6xl font-bold tracking-tight leading-[0.95]">
				Let's talk.
			</h2>
			<p class="mt-5 text-text-muted text-base md:text-lg max-w-md mx-auto leading-relaxed">
				If you want to chat, build something, or just say hey — my inbox is open.
			</p>
			<div class="mt-6">
				<a href="mailto:drkuzmick@gmail.com"
					class="group inline-flex items-center gap-3 bg-accent/10 hover:bg-accent/[0.18] border border-accent/25 hover:border-accent/40 rounded-full px-7 py-3.5 text-accent font-medium transition-all duration-300">
					drkuzmick@gmail.com
					<svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
				</a>
			</div>
		</div>
	</section>

	<script>
		import { initAnimations } from '../lib/animations';
		initAnimations();
	</script>
</Base>
