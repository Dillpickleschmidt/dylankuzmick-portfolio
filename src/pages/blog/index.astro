---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

const posts = await getCollection('blog');
---

<Base title="Blog">
	<h1>Blog</h1>
	<ul>
		{posts.map((post) => (
			<li>
				<a href={`/blog/${post.id}`}>
					<h2>{post.data.title}</h2>
					<p>{post.data.description}</p>
					<time>{post.data.date}</time>
				</a>
			</li>
		))}
	</ul>
</Base>
